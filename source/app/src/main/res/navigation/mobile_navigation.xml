<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.apion.apionhome.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/actionToDetail"
            app:destination="@id/activityDetail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.apion.apionhome.ui.dashboard.DashboardFragment"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.apion.apionhome.ui.notifications.NotificationsFragment"
        tools:layout="@layout/fragment_notifications" />

    <activity
        android:id="@+id/activityDetail"
        android:name="com.apion.apionhome.ui.image.DetailActivity"
        android:label="Product Details"
        tools:layout="@layout/activity_detail" />

</navigation>
